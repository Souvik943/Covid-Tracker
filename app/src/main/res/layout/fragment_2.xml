<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg2">
    <TextView
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="343dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/blackhan"
        android:text="@string/title2"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/title"
        android:textStyle="bold"
        android:layout_below="@+id/distance_anim"
        android:gravity="center" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/distance_anim"
        android:layout_width="364dp"
        android:layout_height="290dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="419dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="distance.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/desc2"
        android:fontFamily="@font/anton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="403dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="275dp"
        android:gravity="center"
        android:text="SAFE DISTANCE"
        android:textColor="@android:color/black"
        android:textSize="35sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="249dp"
        android:layout_alignBottom="@+id/desc2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-253dp"
        android:gravity="center"
        android:text="@string/title2sub_desc"
        android:textColor="@android:color/black"
        android:fontFamily="@font/aa"
        android:textSize="25sp" />

</RelativeLayout>